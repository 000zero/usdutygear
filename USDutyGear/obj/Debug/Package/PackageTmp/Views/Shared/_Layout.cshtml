@using USDutyGear.Common
@model USDutyGear.Models.USDutyGearBaseViewModel

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="US DUTY GEAR, Duty Gear, Duty Belt, Liner Belt, Sam Browne Belt, Sam Browne, Magazine Holder, Magazine Pouch, 
                                      Glove Pouch, Glove Holder, Handcuff Holder, Handcuff Pouch, Baton Ring, Baton Ring Holder, Belt Keeper,
                                      Liner Belt Keeper, Duty Belt Keeper, Police Gear, Officer Gear, Security Gear, Nylon Belt, Leather Belt">
    <meta name="author" content="Steven Garcia">

    <title>US Duty Gear - @ViewBag.Title</title>
    <link rel="icon" href="@Url.Content("~/images/favicon.ico")"/>
    <link href='https://fonts.googleapis.com/css?family=Oswald' rel='stylesheet' type='text/css'>
    <link href='https://fonts.googleapis.com/css?family=Droid+Serif' rel='stylesheet' type='text/css'>
    <link href='https://fonts.googleapis.com/css?family=Cabin' rel='stylesheet' type='text/css'>
    <link href='https://fonts.googleapis.com/css?family=Roboto+Condensed' rel='stylesheet' type='text/css'>
    <link href='https://fonts.googleapis.com/css?family=Fira+Sans' rel='stylesheet' type='text/css'>
    <link href='https://fonts.googleapis.com/css?family=Ropa+Sans' rel='stylesheet' type='text/css'>
    @Styles.Render("~/Content/css")
    @RenderSection("styles", required: false)

    <!-- [if IE] -->
    <link href="~/Content/ie-9-and-lower.css" rel="stylesheet" type="text/css">
    <!-- [endif] -->
    @Styles.Render("~/Content/ie")

    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <!-- Navigation -->
    <nav class="navbar" role="navigation">
        <div class="container">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">&#9776;</button>
                <a href="/cart/" class="navbar-toggle cart-link"><span class="glyphicon glyphicon-shopping-cart" aria-hidden="true"></span></a>
                <a class="navbar-brand" href="@Url.Content("~/")">US DUTY GEAR @(USDutyGearConfig.TestMode ? "TEST" : "")</a>
            </div>
            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav">
                    @foreach(var category in Model.Categories)
                    {
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                                @category.Category @*<span class="caret"></span>*@
                            </a>
                            <ul class="dropdown-menu">
                                @foreach (var product in category.Products)
                                { <li><a href="/products/@product.RouteKey">@product.Name</a></li> }
                            </ul>
                        </li>
                    }
                    <li>@Html.ActionLink("Contact", "Contact", "About")</li>
                </ul>
                <ul class="nav navbar-nav navbar-right cart">
                    <li>
                        <a href="/cart/">
                            <span class="glyphicon glyphicon-shopping-cart" aria-hidden="true"></span>
                        </a>
                    </li>
                </ul>
            </div>
            <!-- /.navbar-collapse -->
        </div>
        <!-- /.container -->
    </nav>
    <!-- Page Content -->
    <div class="container-fluid">
        @RenderBody()
    </div>
    <div class="container">
        <!-- Footer -->
        <footer>
            <div class="row footer">
                <div class="col-lg-12">
                    <span>Copyright &copy; US Duty Gear @DateTime.Now.Year</span>
                    &bull;
                    <span>@Html.ActionLink("Return Policy", "ReturnPolicy", "About")</span>
                    &bull;
                    <span>@Html.ActionLink("Privacy Policy", "PrivacyPolicy", "About")</span>
                </div>
            </div>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/knockout")
    @Scripts.Render("~/bundles/usdutygear")
    @RenderSection("scripts", required: false)
</body>
</html>
