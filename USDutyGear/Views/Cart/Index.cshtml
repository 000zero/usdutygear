@using System.Globalization

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row">
    <div class="container cart-list">
        <div class="row">
            <div class="col-lg-8">
                <h1>Shopping Cart</h1>
            </div>
            <div class="col-lg-4">
                <button class="btn btn-default" onclick="rootCtrl.emptyCart()">Empty Cart</button>
                <label for="submit-shopping-list-cart"><button class="btn btn-default">Update Cart</button></label>
            </div>
        </div>

        @using (Html.BeginForm("Index", "Cart", FormMethod.Post, new {id = "shopping-cart-list-form"}))
        {
            foreach (var item in Model.Items)
            {
                <div class="row">
                    <div class="col-lg-8">
                        <h3>@item.Title</h3>
                        <div><span>Model #</span>@item.Model</div>
                    </div>
                    <div class="col-lg-4">
                        <div><span>Quantity: </span><input type="number" name="cart[@Model]" value="@item.Quantity" /></div>
                        <div><span>Price:</span>@item.Price.ToString(CultureInfo.InvariantCulture)</div>
                    </div>
                </div>
            }
            <input type="submit" id="submit-shopping-list-cart" class="hidden" />
        }

        <div class="row">
            <div class="col-lg-6 col-md-6">
                <h2>Shipping Address</h2>
                <span>First Name: </span><input type="text" name="firstname"/>
                <span>Last Name: </span><input type="text" name="lastname"/>
                <span>Address: </span><input type="text" name="address"/>
                <span>City: </span><input type="text" name="city"/>
                <span>State: </span><input type="text" name="state"/>
                <span>Zip Code: </span><input type="text" name="zip"/>
                <input type="checkbox" name="shippingSameAsBillingAddress"/> Use for billing address
            </div>
            <div class="col-lg-6 col-md-6">
                <h2>Billing Address</h2>
                <span>First Name: </span><input type="text" name="billingfirstname"/>
                <span>Last Name: </span><input type="text" name="billinglastname"/>
                <span>Address: </span><input type="text" name="billingaddress"/>
                <span>City: </span><input type="text" name="billingcity"/>
                <span>State: </span><input type="text" name="billingstate"/>
                <span>Zip Code: </span><input type="text" name="billingzip"/>
            </div>
        </div>

        <div class="row">
            
        </div>

    </div>
    <!-- total -->
</div>

